---
import Layout from '../layouts/Layout.astro';
import WindData from '../components/WindData.jsx';
import Footer from "../components/Footer.astro";

const currentDate = new Date();
let formattedDate = currentDate.toISOString().slice(0, 10).replace(/-/g, '-');
---

<Layout>
    <div>
        <div class="flex items-center gap-2">
            <h1>Blouberg - Wind</h1>
            <span class="flex h-fit px-1 py-0,5 rounded text-nowrap bg-rose-600 text-xs font-bold text-zinc-900">Live</span>
        </div>
        <h2>{formattedDate}</h2>
        <p class="pt-4">
            This is an official weather station.<br>
            Iâ€™m definitely not just scraping Mac wind data.
        </p>
    </div>
    <div class="flex flex-grow">
        <WindData client:load/>
    </div>

    <Footer/>
</Layout>